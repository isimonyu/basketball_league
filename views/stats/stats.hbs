<h1>Player's Stats</h1>
    <nav>
      <a href="/">Home</a>
      <a href="players">Players</a>
      <a href="coaches">Coaches</a>
      <a href="teams">Teams</a>
      <a href="games">Games</a>
      <a href="stats">Stats</a>
</nav>
<br />
    <a href="/stats/create"><button class="add button">Add New</button></a>
<br />
<br />
<form id="search-player" method='GET' action='/stats'>
    <label for="input-pname">Search by Player's Full Name: </label>
    <input type="text" name="pname" id="player-searchbar">
    
    <input type="submit">
</form>
<div class="table-container stats-table">
<table>
    <tr>
        {{#each data.[0]}}
          {{#if (neq @key "ID")}}
            {{#if (neq @key "gameID")}}
              {{#if (neq @key "playerID")}}
        <th>
            {{@key}}
        </th>
              {{/if}}
            {{/if}}
          {{/if}}
        {{/each}}
    <th></th>
    <th></th>
    </tr>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.Date}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.Points}}</td>
            <td>{{this.Assists}}</td>
            <td>{{this.Rebounds}}</td>
            <td>{{this.FieldGoals}}</td>
            <td>{{this.FreeThrows}}</td>
            <td>{{this.ThreePoints}}</td>
            <td>{{this.Blocks}}</td>
            <td>{{this.Steals}}</td>
            <td>{{this.Fouls}}</td>
            <td>{{this.Minutes}}</td>
            <td>
              <button 
                class="table-buttons edit"
                onclick="editStat('{{this.ID}}')"
              >Edit</button>
            </td>
            <td>
              <button 
              class="table-buttons delete"
              onclick="deleteStat('{{this.ID}}', '{{this.Name}}')"
              >Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="/js/update_stat.js"></script>
    </div>
