<h1>Coaches</h1>
<nav>
    <a href="/">Home</a>
    <a href="players">Players</a>
    <a href="#">Coaches</a>
    <a href="teams">Teams</a>
    <a href="games">Games</a>
    <a href="stats">Stats</a>
</nav>
<br />
    <a href="/coaches/create"><button class="add button">Add New</button></a>
<br />
<div class="table-container">
<table>
    <tr>
        {{#each data.[0]}}
          {{#if (neq @key "ID")}}
          <th>  
            {{ @key }}
          </th>
            {{/if}}
        {{/each}}
    <th></th>
    <th></th>
    </tr>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.Name}}</td>
            <td>{{this.Style}}</td>
            <td>{{this.Experience}} years</td>
            <td>{{this.Wins}}</td>
            <td>{{this.Losses}}</td>
            <td>
                {{#if (eq this.Team null)}}
                None
                {{else}}
                {{this.Team}}
                {{/if}}
            </td>
            <td>
              <button 
                class="table-buttons edit"
                onclick="editCoach('{{this.ID}}')"
              >Edit</button>
            </td>
            <td>
              <button 
              class="table-buttons delete"
              onclick="deleteCoach('{{this.ID}}', '{{this.Name}}')"
              >Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="/js/update_coach.js"></script>
</div>