 <h2>Creating Coach:</h2>
    <form id="coach-create-form">
      <div class="form-container">
        <label for="name">Coach Full Name:</label>
        <input type="text" name="name" id="input-cname"/>
        <br />

        <label for="height">Coaching Style:</label>
        <input type="text" name="style" id="input-style" />
        <br />

        <label for="position">Years of Experience:</label>
        <input type="number" name="years" id="input-experience" />
        <br />

        <label for="number">Total Wins:</label>
        <input type="number" name="win" id="input-win" />
        <br />

        <label for="number">Total Losses:</label>
        <input type="number" name="loss" id="input-loss" />
        <br />
        
        <label for="teams">Team:</label>
        <select name="teams" id="input-teamID">
            <option value="" hidden>--Select One--</option>
            <option value="none">None</option>
            {{#each data}}
            <option value="{{this.ID}}">{{this.Name}}</option>
            {{/each}}
        </select>
        </div>
        <div class="button-container">
          <a href="/coaches"><button type="button" class="back button">Back</a></button>
          <input class="submit button" type="submit" />
        </div>
    </form>
<script src="/js/coach.js"></script>
