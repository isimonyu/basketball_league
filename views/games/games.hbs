<div class="table-container">
<table>
    <tr>
        {{#each data.[0]}}
          {{#if (neq @key "ID")}}
          <th>  
            {{ @key }}
          </th>
            {{/if}}
        {{/each}}
    <th></th>
    <th></th>
    </tr>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.Date}}</td>
            <td>{{this.HomeTeam}}</td>
            <td>{{this.HomeScore}}</td>
            <td>{{this.AwayTeam}}</td>
            <td>{{this.AwayScore}}</td>
            <td>
              <button
                class="table-buttons edit"
                onclick="editGame('{{this.ID}}')"
              >Edit</button>
            </td>
            <td>
              <button
              class="table-buttons delete"
              onclick="deleteGame('{{this.ID}}', '{{this.Date}}')"
              >Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="/js/update_game.js"></script>
</div>