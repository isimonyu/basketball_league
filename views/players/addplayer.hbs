<h2>Adding Players:</h2>
<form id="player-create-form">
    <div class="form-container">
    <label for="name">Player Full Name:</label>
    <input type="text" name="name" id="input-pname" />
    <br />

    <label for="city">Player Height (Inches):</label>
    <input type="number" name="city" id="input-height" />
    <br />

    <label for="position">Player Position:</label>
    <select name="position" id="input-position">
      <option value="" hidden>--Select One--</option>
      <option value="point guard">Point Guard</option>
      <option value="shooting guard">Shooting Guard</option>
      <option value="small forward">Small Forward</option>
      <option value="power foward">Power Foward</option>
      <option value="center">Center</option>
    </select>
    <br />

    <label for="number">Player Number:</label>
    <input type="number" name="number" id="input-number" />
    <br />

    <label for="teams">Team:</label>
    <select name="teams" id="input-teamID">
        <option value="" hidden>--Select One--</option>
        <option value="none">None</option>
        {{#each data}}
        <option value="{{this.ID}}">{{this.Name}}</option>
        {{/each}}
    </select>
    </div>
    <div class="button-container">
        <a href="/players"><button type="button" class="back button">Back</a></button>
        <input class="submit button" type="submit" />
    </div>
</form>
<script src="/js/player.js"></script>
